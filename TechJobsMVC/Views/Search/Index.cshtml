

<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@(column.Key == ViewBag.check)" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />
    @if (ViewBag.jobs != null)
    {
    @foreach (var job in ViewBag.jobs)
    {
<table class="job-listing">
    <tr>
        <td>
            ID: @job.Id
        </td>
    </tr>
    <tr>
        <td>
            Name: @job.Name
        </td>
    </tr>
    <tr>
        <td>
            Employer: <a asp-controller="List" asp-action="Jobs" asp-route-column="employer" asp-route-value=@job.Employer>@job.Employer</a>
        </td>
    </tr>
    <tr>
        <td>
            Location: <a asp-controller="List" asp-action="Jobs" asp-route-column="location" asp-route-value=@job.Location>@job.Location</a>
        </td>
    </tr>
    <tr>
        <td>
            Position Type: <a asp-controller="List" asp-action="Jobs" asp-route-column="positionType" asp-route-value=@job.PositionType>@job.PositionType</a>
    </tr>
    <tr>
        <td>
            Skill: <a asp-controller="List" asp-action="Jobs" asp-route-column="coreCompetency" asp-route-value=@job.CoreCompetency>@job.CoreCompetency</a>
        </td>
    </tr>
</table>
    }
    }


</div>